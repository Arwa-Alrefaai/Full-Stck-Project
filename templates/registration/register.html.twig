{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block
body %}
<div class="container" style="width: 500px">
  <h1>Register</h1>

  {{ form_start(registrationForm) }}
  {{
    form_row(registrationForm.first_name, {
      label: "Name:"
    })
  }}
  {{
    form_row(registrationForm.last_name, {
      label: "Surname:"
    })
  }}
  {{
    form_row(registrationForm.email, {
      label: "Email:"
    })
  }}
  {{
    form_row(registrationForm.address, {
      label: "Address:"
    })
  }}
  {{
    form_row(registrationForm.phone, {
      label: "Phone:"
    })
  }}
  {{
    form_row(registrationForm.plainPassword, {
      label: "Password:"
    })
  }}
  {{ form_row(registrationForm.agreeTerms) }}

  <button type="submit" class="btn btn-dark my-2">Register</button>
  {{ form_end(registrationForm) }}
</div>
{% endblock %}
