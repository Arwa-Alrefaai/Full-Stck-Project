{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset ('css/course.css') }}" /> 
{% endblock %}
{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>



<div class="container ">
     <div class="row row-cols-3 g-4"> 
        {% for course in courses %}
            <div class="card">
            {# <p class="card-header text-bg-secondary">  </p>  #}
            <img src="{{ asset ('pictures/' ~ course.img ) }}"  class="card-img-top" alt="">
            <div class="card-body" > 
            <h5 class="card-title">{{ course.name }}</h5><hr>
            <p class="card-text"><b>  Start on :</b> {{ course.startDate ? course.startDate|date('Y-m-d H:i:s') : '' }}</p>
            <p class="card-text"><b>  End on :</b> {{ course.endDate ? course.endDate|date('Y-m-d H:i:s') : '' }}</p>
            <p class="card-text"> Price : {{ course.price }} € </p>
            <button class="button" style="vertical-align:middle">
                <span>
                <a href="{{ path('app_course_show', {'id': course.id}) }}">Details</a>      
                </span>
                <button class="action btn btn-primary">
                <a href="{{ path('app_course_edit', {'id': course.id}) }}">Edite</a>
            </button>
            <button class="action btn btn-danger">
                <a href="{{ path('app_course_delete', {'id': course.id}) }}">Delete</a>
            </button>
            </button>
            </button>
             <div class="card-footer">
                <div class="text-foot"><b>Available : </b>{{ course.available ? 'Yes' : 'No' }}</div>
             </div> <hr>
             
             
             
         </div>  
        {% endfor %}
     </div> 
</div>







