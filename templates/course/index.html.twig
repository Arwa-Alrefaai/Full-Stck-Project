{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Price â‚¬</th>
                <th>Capacity</th>
                <th>Available</th>
                <th>Actions</th>
                </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.description }}</td>
                <td>{{ course.startDate ? course.startDate|date('d.m.Y H:i') : '' }}</td>
                <td>{{ course.endDate ? course.endDate|date('d.m.Y H:i') : '' }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.capacity }}</td>
                <td>{{ course.available ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_new') }}">Create new</a>
{% endblock %}
