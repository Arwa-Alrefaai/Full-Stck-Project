{% extends 'base.html.twig' %} {% block title %}Course{% endblock %} {% block
body %}
<div class="container">
  <a class="btn btn-warning my-2" href="{{ path('app_course_index') }}"
    >back to list</a
  >
  <h1>Course</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ course.id }}</td>
      </tr>
      <tr>
        <th>Description</th>
        <td>{{ course.description }}</td>
      </tr>
      <tr>
        <th>Start_date</th>
        <td>
          {{ course.startDate ? course.startDate|date('Y-m-d H:i:s') : '' }}
        </td>
      </tr>
      <tr>
        <th>End_date</th>
        <td>{{ course.endDate ? course.endDate|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Price</th>
        <td>{{ course.price }}</td>
      </tr>
      <tr>
        <th>Capacity</th>
        <td>{{ course.capacity }}</td>
      </tr>
      <tr>
        <th>Available</th>
        <td>{{ course.available ? "Yes" : "No" }}</td>
      </tr>
    </tbody>
  </table>

  <a
    class="btn btn-dark my-2"
    href="{{ path('app_course_edit', { id: course.id }) }}"
    >edit</a
  >

  {{ include("course/_delete_form.html.twig") }}
</div>
{% endblock %}
