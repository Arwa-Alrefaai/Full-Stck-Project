{% extends 'base.html.twig' %} {% block title %}Course{% endblock %} {% block
body %}
<div class="container">
  <h2>{{ course.name }}</h2>
  <div class="row py-2">
    <div class="col-4">
      <img
        src="{{ asset ('pictures/'~ course.img) }}"
        class="card-img-top"
        alt="{{ course.name }}"
      />
    </div>
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ course.id }}</td>
          </tr>
          <tr>
            <th>Description</th>
            <td>{{ course.description }}</td>
          </tr>
          <tr>
            <th>Start_date</th>
            <td>
              {{ course.startDate ? course.startDate|date('Y-m-d H:i:s') : '' }}
            </td>
          </tr>
          <tr>
            <th>End_date</th>
            <td>
              {{ course.endDate ? course.endDate|date('Y-m-d H:i:s') : '' }}
            </td>
          </tr>
          <tr>
            <th>Price</th>
            <td>{{ course.price }}</td>
          </tr>
          <tr>
            <th>Capacity</th>
            <td>{{ course.capacity }}</td>
          </tr>
          <tr>
            <th>Available</th>
            <td>{{ course.available ? "Yes" : "No" }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <a class="btn btn-warning my-2" href="{{ path('app_course_index') }}"
    ><i class="bi bi-list-ul pe-2"></i>Back to list</a
  >
  <a
    class="btn btn-dark my-2"
    href="{{ path('app_course_edit', { id: course.id }) }}"
    ><i class="bi bi-pencil-square pe-2"></i>Edit</a
  >

  {{ include("course/_delete_form.html.twig") }}
</div>
{% endblock %}
