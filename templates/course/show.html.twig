		<hr>
		<div class="row g-0 ">
			<div class="col-6">
				<a class="btn btn-warning" style="width: 30%;" href="{{ path('app_course_index') }}" style="text-decoration: none; color: white;"><i class="bi bi-list-ul pe-2"></i>Back to liste</a>
				<img src="{{ asset ('pictures/' ~ course.img ) }}" class="card mb-4" style="margin-top: 20px; margin-left:15px; max-width:100%">
			</div>
			<div class="col-md-6">
				<div class="card-body" style="max-width: 100%; margin-left:5%;">
