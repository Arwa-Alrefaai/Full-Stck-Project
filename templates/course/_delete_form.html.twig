<form
  method="post"
  action="{{ path('app_course_delete', { id: course.id }) }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ course.id) }}"
  />
  <button class="btn" style="background-color: #fe3f40; color:white">
    <i class="bi bi-trash3-fill pe-2"></i>Delete
  </button>
</form>
